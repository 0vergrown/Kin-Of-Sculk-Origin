{
   "name":"Echolocation",
   "description":"You've learned their tactics. [Secondary]",
   "badges":[
      {
         "type":"origins:tooltip",
         "sprite":"origins:textures/gui/badge/active.png",
         "text":[
            "Active ability, use [",
            {
               "keybind":"key.origins.secondary_active"
            },
            "]"
         ]
      },
      {
         "type":"origins:tooltip",
         "sprite":"origins:textures/gui/badge/info.png",
         "text":"With a keypress you can highlight entities for a few seconds to see them"
      }
   ],
   "type":"origins:active_self",
   "entity_action":{
      "type":"origins:and",
      "actions":[
         {
            "type":"origins:area_of_effect",
            "radius":22,
            "shape":"sphere",
            "bientity_action":{
               "type":"origins:target_action",
               "action":{
                  "type":"origins:and",
                  "actions":[
                     {
                        "type":"origins:grant_power",
                        "power":"kin_of_sculk:keen_ears_noise",
                        "source":"kin_of_sculk:kin_of_sculk"
                     },
                     {
                        "type":"origins:change_resource",
                        "resource":"kin_of_sculk:keen_ears_noise_duration",
                        "change":3,
                        "operation":"set"
                     }
                  ]
               }
            }
         },
         {
            "type":"origins:choice",
            "actions":[
               {
                  "element":{
                     "type":"origins:execute_command",
                     "command":"playsound kin_of_sculk:keen_ears.crackle_fast player @p ~ ~ ~ 0.20 1.00 0.20"
                  },
                  "weight":10
               },
               {
                  "element":{
                     "type":"origins:execute_command",
                     "command":"playsound kin_of_sculk:charged_shot.crackle_roar player @p ~ ~ ~ 1.00 1.00 0.50"
                  },
                  "weight":10
               },
               {
                  "element":{
                     "type":"origins:execute_command",
                     "command":"playsound kin_of_sculk:echolocation.crackle_slow player @p ~ ~ ~ 1.00 1.00 0.50"
                  },
                  "weight":20
               }
            ]
         }
      ]
   },
   "cooldown":1,
   "hud_render":{
      "should_render":false
   },
   "key":{
      "key":"key.origins.secondary_active",
      "continuous":false
   }
}