{
   "name":"Rough Mits",
   "description":"You've got them grippers. [Save Toolbar Activator]",
   "badges":[
	   {
         "type":"origins:tooltip",
         "sprite":"origins:textures/gui/badge/toggle.png",
         "text":[
           "Toggleable with [",
           {
             "keybind":"key.saveToolbarActivator"
           },
           "] key."
         ]
      },
      {
         "type":"origins:tooltip",
         "sprite":"origins:textures/gui/badge/info.png",
         "text":"Can scale walls and ceilings and jump from them."
      },
      {
         "type":"origins:tooltip",
         "sprite":"origins:textures/gui/badge/info.png",
         "text":"Jump/dash off of walls by double tapping space."
      }
   ],
   "type":"origins:multiple",
   "toggle":{
      "type":"origins:toggle",
      "active_by_default":false,
      "key":{
         "key":"key.saveToolbarActivator",
         "continuous":false
      },
      "retain_state":true
   },
   "wall_run":{
      "type":"origins:action_over_time",
      "entity_action":{
         "type":"origins:and",
         "actions":[
            {
               "type":"origins:apply_effect",
               "effect":{
                  "effect":"minecraft:levitation",
                  "duration":2,
                  "amplifier":-1,
                  "is_ambient":false,
                  "show_particles":false,
                  "show_icon":false
               }
            },
            {
               "type":"origins:add_velocity",
               "x":0.0,
               "y":0.0,
               "z":0.05,
               "space":"local",
               "client":true,
               "server":true,
               "set":false
            }
         ]
      },
      "falling_action":{
         "type":"origins:clear_effect",
         "effect":"minecraft:levitation"
      },
      "interval":1,
      "condition":{
         "type":"origins:and",
         "conditions":[
            {
               "type":"origins:power_active",
               "power":"kin_of_sculk:rough_mits_toggle"
            },
            {
               "type":"origins:on_block",
               "inverted":true
            },
            {
               "type":"origins:or",
               "conditions":[
                  {
                     "type":"origins:block_collision",
                     "offset_x":0.1,
                     "offset_z":0.1,
                     "offset_y":0,
                     "inverted":false
                  },
                  {
                     "type":"origins:block_collision",
                     "offset_x":-0.1,
                     "offset_z":-0.1,
                     "offset_y":0,
                     "inverted":false
                  }
               ],
               "inverted":false
            }
         ]
      }
   },
   "wall_jump":{
      "type":"origins:active_self",
      "entity_action":{
         "type":"origins:and",
         "actions":[
            {
               "type":"origins:add_velocity",
               "space":"world",
               "set":false,
               "y":0.5
            },
            {
               "type":"origins:add_velocity",
               "space":"local",
               "z":0.5
            },
            {
               "type":"origins:execute_command",
               "command":"particle minecraft:snowflake ~ ~ ~ .1 0 .1 0 10 normal"
            },
            {
               "type":"origins:execute_command",
               "command":"playsound minecraft:block.powder_snow.break player @a[distance=..32] ~ ~ ~ .4 0"
            }
         ]
      },
      "cooldown":5,
      "hud_render":{
         "should_render":false
      },
      "key":{
         "key":"key.jump"
      },
      "condition":{
         "type": "origins:and",
         "conditions": [
             {
               "type":"origins:power_active",
               "power":"kin_of_sculk:rough_mits_toggle"
             },
             {
               "type":"origins:or",
               "conditions":[
                  {
                     "type":"origins:in_block_anywhere",
                     "block_condition":{
                        "type":"origins:offset",
                        "condition":{
                           "type":"origins:movement_blocking"
                        },
                        "x":1
                     }
                  },
                  {
                     "type":"origins:in_block_anywhere",
                     "block_condition":{
                        "type":"origins:offset",
                        "condition":{
                           "type":"origins:movement_blocking"
                        },
                        "x":-1
                     }
                  },
                  {
                     "type":"origins:in_block_anywhere",
                     "block_condition":{
                        "type":"origins:offset",
                        "condition":{
                           "type":"origins:movement_blocking"
                        },
                        "z":1
                     }
                  },
                  {
                     "type":"origins:in_block_anywhere",
                     "block_condition":{
                        "type":"origins:offset",
                        "condition":{
                           "type":"origins:movement_blocking"
                        },
                        "z":-1
                     }
                  }
               ]
            }
         ]
      }
   }
}